@using KnockoutMVC.Web.Models
@model DreamCar
@{
    ViewBag.Title = "Html Helper";
}



@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title"></hgroup>
            <p>Applying KnockoutJS to ASP.NET MVC 4 : HTML Helpers</p>
        </div>
    </section>
}

<h2 style="margin-bottom: 20px;">Dream Car Wish List!</h2>
<table>
    <thead>
        <tr>
            <th style="width: 100px; text-align: left">Year</th>
            <th style="width: 100px; text-align: left">Make</th>
            <th style="width: 300px; text-align: left">Model</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.TextBoxFor(car => car.Year, new {data_bind = "value: year"})</td>
            <td>@Html.TextBoxFor(car => car.Make, new {data_bind = "value: make"})</td>
            <td>@Html.TextBoxFor(car => car.Model, new {data_bind = "value: model"})</td>
        </tr>
        <tr style="margin-top: 20px;">
            <td colspan="3"><span data-bind = "text: year"></span>&nbsp;<span data-bind = "text: make"></span>&nbsp;<span data-bind = "text: model"></span></td>
        </tr>

    </tbody>
</table>

    <script type="text/javascript">
        window.dreamCarForm = {
            id: '@Model.Id',
            make: '@Model.Make',
            model: '@Model.Model',
            year: '@Model.Year'
        };
    </script>
    <script src="@Url.Content("~/Scripts/KnockoutMVC/htmlhelperupdate.js")" type="text/javascript"> </script>

